                                padding: dp(10)
                                default_size: None, dp(48)
                                default_size_hint: 1, None
                                size_hint_y: None
                                height: self.minimum_height
                                orientation: 'vertical'

                MDBottomNavigationItem:
                    name: 'account'
                    text: 'Profile'
                    icon:"account-cowboy-hat"
                    on_enter:
                        app.profile_caller()
                    FloatLayout:
                        MDIconButton:
                            # image-filter-vintage
                            icon:'cog'
                            theme_text_color: "Custom"
                            pos_hint:{'center_x':.9, 'center_y':.95}
                            text_color: 78 / 255, 82 / 255, 84 / 255, 1
                            on_press:
                                app.screen_capture('settings')
                        MDLabel:
                            text:app.user_name
                            pos_hint:{'center_x':.5, 'center_y':.95}
                            halign:'center'
                            font_style:'H6'
                            bold:True
                            font_size:"25sp"
                            font_name:'images/fonts/Gill Sans Bold.otf'
                            theme_text_color: "Custom"
                            text_color: 78/255, 82/255, 84/255, 1
                        AsyncImage:
                            source:app.user_logo
                            pos_hint:{'center_x':.5, 'center_y':.8}
                            size_hint: None, None
                            size: "300dp", "300dp"
                        MDLabel:
                            text:app.user_bio
                            pos_hint:{'center_x':.5, 'center_y':.63}
                            halign:'center'
                            bold:True
                            font_name:'images/fonts/Gill Sans.otf'
                            theme_text_color: "Custom"
                            text_color: 78/255, 82/255, 84/255, 1
                        MDLabel:
                            text:app.user_point + '/BP'
