                        orientation:'vertical'
                        Labels:
                            text:'Search for company'
                            halign:'center'
                            bold:True
                            font_size: "25sp"
                        MDTextFieldRound:
                            id:searchText
                            pos_hint:{"center_x":.5, "center_y":.48}
